{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "module": "es2020",
    "sourceMap": true,
    "mapRoot": "./",
    "baseUrl": "./src/js",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "declarationDir": "./dist/types",
    "declaration": true,
    "lib": [
      "dom",
      "es6"
    ],
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "src/**/*.test.*",
  ]
}